<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="address" class="com.kuang.domain.Address" scope="prototype">
        <property name="address" value="北京"/>
    </bean>

    <bean id="student" class="com.kuang.domain.Student">
        <!--    第一种：普通注入    -->
        <property name="name" value="秦疆"/>
        <!--    第二种：bean注入，注入的是一个对象    -->
        <property name="address" ref="address"/>
        <!--    第三种：数组注入    -->
        <property name="books">
            <array>
                <value>Java葵花宝典</value>
                <value>Java成神之路</value>
                <value>Java从入门到入土</value>
                <value>Java全栈开发</value>
            </array>
        </property>
        <!--    第四种：List集合注入    -->
        <property name="hobbies">
            <list>
                <value>打球</value>
                <value>听歌</value>
                <value>敲代码</value>
                <value>写bug</value>
            </list>
        </property>
        <!--    第五种：Map集合注入    -->
        <property name="cards">
            <map>
                <entry key="任嘉伦" value="国超哥"/>
                <entry key="周杰伦" value="亚洲天王"/>
            </map>
        </property>
        <!--    第六种：Set注入    -->
        <property name="games">
            <set>
                <value>LOL</value>
                <value>COC</value>
            </set>
        </property>
        <!--    第七种：null值注入(这里注意null和没有值区别)    -->
        <property name="wife">
            <null/>
        </property>
        <!--    第八种：properties注入    -->
        <property name="info">
            <props>
                <prop key="username">赵涵</prop>
                <prop key="cordId">01196023</prop>
                <prop key="password">123</prop>
            </props>
        </property>
    </bean>
</beans>